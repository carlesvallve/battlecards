{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2018"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "src/*": [
        "./src/*",
        "./node_modules/@blackstormlabs/timestep-core/src/*"
      ],
      "platforms/*": [
        "./node_modules/@blackstormlabs/timestep-core/src/platforms/*"
      ],
      "ui/*": ["./node_modules/@blackstormlabs/timestep-core/src/ui/*"],
      "movieclip/*": [
        "./node_modules/@blackstormlabs/timestep-core/src/movieclip/*"
      ]
    }
  },
  "include": ["src/*", "src/**/*", "tests/*", "tests/**/*"]
}

