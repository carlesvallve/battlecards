{
  "name": "slime-smash",
  "title": "Slime Smash",
  "version": "1.0.0",
  "manifest": {
    "maxTick": 50,
    "android": {
      "enableLowRes": false,
      "webGL": {
        "maxTextureMegabytes": 150
      }
    },
    "ios": {
      "enableLowRes": false,
      "webGL": {
        "maxTextureMegabytes": 150
      }
    },
    "browser": {
      "canvas": {
        "useWebGL": true
      },
      "disableServiceWorkers": true,
      "webGL": {
        "maxTextureMegabytes": 150
      }
    }
  },
  "scripts": {
    "postinstall": "git submodule update --init --recursive && (cd frontend && npm install)",
    "start": "npm run serve",
    "build": "./frontend/node_modules/.bin/webpack --env.buildType production --no-inline",
    "lint": "eslint src",
    "serve": "./frontend/node_modules/.bin/webpack-dev-server --env.buildType development --no-inline",
    "clean": "rm -rf build dist testResults deploy .cache",
    "clean-modules": "rm -rf node_modules"
  },
  "author": "Carles Vallve",
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {
    "eslint": "^5.11.1"
  }
}
